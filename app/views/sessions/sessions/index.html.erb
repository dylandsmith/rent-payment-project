
  <% content_for :title do %>
    <h1>"Log In Fool!" </h1>
  <% end %>
   <div class="form-group">
      	 <%= form_tag sessions_sessions_path do %>
		 <div class="row">
			<div class="col-md-4"></div>
         	<div class="col-md-4">
            	<%= label_tag :email %>
            	<%= text_field_tag :email, params[:email], :class => 'form-control' %>
        	</div>
			<div class="col-md-4"></div>
		</div>
		<div class="row">
			<div class="col-md-4"></div>
        	<div class="col-md-4">
             	<%= label_tag :password %>
             	<%= password_field_tag :password, nil, class: 'form-control col-md-4' %>
			</div>
			<div class="col-md-4"></div>
		</div>
		<div class="row">
			<div class="col-md-4"></div>
        	<div class="button col-md-4">
				<%= submit_tag "Log in", :class => 'btn btn-default' %>
			</div>
			<div class="col-md-4"></div>
		</div>
      	<% end %>
  	</div>

