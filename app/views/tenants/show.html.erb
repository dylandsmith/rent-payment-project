<% content_for :title do %>
  <h1><%= @tenant.first_name %> <%= @tenant.last_name %></h1>
  <ul class="nav nav-pills">
    <li class="active"><a data-toggle="tab" href="#secA">Home</a></li>
    <li><a data-toggle="tab" href="#secB">Service Request</a></li>
  </ul>
<% end %>
<div class="tab-content">
  <div id="secA" class="tab-pane fade in active">
    <div class="panel panel-primary">
      <% if @tenant.units.empty? %>
      <%= render 'get_states_form' %>
        
        <%#= select_tag 'Properties', options_from_collection_for_select(@properties, 'id', 'title') %>
        <%#= submit_tag 'Submit' %>
        <%#= select_tag 'Units', options_from_collection_for_select(@units, 'id', 'address2') %>
      <% else %>
        <div class="panel-heading">
          <h1 class="panel-title" style="float:left">
            Monthly report for Unit# <%#= @unit.address2 %>
          </h1>
          <button class="btn btn-primary" type="button" style="float:right">
            Rent is due in: <span class="badge"><%= Unit.due_date%></span>
          </button>
          <div style="clear:both"></div>
        </div>
        <div class="panel-body">
          <fieldset><legend>Charges Incurred</legend>
            <table class="table table-bordered">
              <thead class="thead thead-inverse">
                <tr>
                  <th>Item</th>
                  <th>Amount</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Parking</td><td>12.95</td>
                </tr>
                <tr>
                  <td>Landscaping</td><td>7.55</td>
                </tr>
                <tr>
                  <td>Gym Maintanance</td><td>4.95</td>
                </tr>
                <tr>
                  <td>Pool Maintenance</td><td>3.23</td>
                </tr>
              </tbody>
              <tfoot>
                <tr>
                  <td>Total</td><td>1255.00</td>
                </tr>
              </tfoot>
            </table>
          </fieldset>
        </div>
      <% end %>
    </div>
  </div>
  <div id="secB" class="tabe-pane fade">
    <%= render "workspace/show_maintenance_req" %>
  </div>
</div>